#!/usr/bin/python
import requests
import datetime
import sys

day = datetime.datetime.today()

limit = -1

if len(sys.argv) > 1:
	limit = int(sys.argv[1])

while True:
	for i in range(24):
		daystring = day.strftime("%d.%m.%Y")

		url = f'https://www.rautemusik.fm/radio/loadPlaylist/wackenradio/{daystring}/{23-i}/'
		r = requests.get(url)
	
		if r.status_code != 200:
			print(f'status code {r.status_code} {url}')
			continue
		
		l = list(r.json()['playlist'].values())[::-1]

		for s in l:
			print(f"{daystring} {s['time']} {s['artist']} - {s['track']}")
			limit -= 1
			if limit == 0:
				exit()

	day = day - datetime.timedelta(days=1)
